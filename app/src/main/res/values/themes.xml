<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Theme.DaisoWorks" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:textColorHint">@color/lightblack</item>
    </style>

    <style name="Theme.DaisoWorks.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DaisoWorks.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="RoundCornerBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RoundCornerModalStyle</item>
    </style>

    <style name="RoundCornerModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/roundcornermodalstyle</item>
    </style>
    <style name="Theme.DaisoWorks.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="switchTextAppearance">
        <item name="thumbTint">@color/purple_700</item>
        <item name="track">@drawable/style_toggle_btn</item>
        <item name="android:thumb">@drawable/style_toggle_thumb</item>
        <item name="android:enabled">true</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/nanumgothicextrabold</item>
        <item name="android:fontWeight">800</item>
    </style>

    <style name="cardViewApperanceLeft">
        <item name="android:backgroundTint">#A4C4F8</item>
    </style>

    <style name="cardViewApperanceRight">
        <item name="android:backgroundTint">#BBCFA3</item>
    </style>
    <style name="textColorPrimary">
        <item name="android:textColor">#000000</item>
    </style>
    <style name="itemText">
        <item name="itemTextColor">@drawable/bottom_navigation_color</item>
        <item name="itemIconTint">@drawable/bottom_navigation_color</item>
    </style>


</resources>