<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="#40C4FF" /> <!-- 배경색 -->
            <stroke
                android:width="1dp"
                android:color="#f0f0f0" /> <!-- 테두리 -->
            <corners android:radius="4dp" /> <!-- 모서리 둥글게 -->
        </shape>
    </item>

    <!-- 화살표 아이콘 추가 -->
    <item android:drawable="@android:drawable/arrow_down_float" android:gravity="end|center_vertical" android:right="15dp"/>
</layer-list>